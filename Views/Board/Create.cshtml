@model Board
<div style="display:flex;justify-content:center">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2>Create new board</h2>
                </hr>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="mb-3 row p-1">
                <label asp-for="Name" style="color:black" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        
            <div class="row" style="display:flex; flex-direction:column;">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success form-control" style="width:190px;margin-bottom:10px;">Create</button>
                </div>

                <div class="col-6 col-md-3">
                    <a asp-controller="Board" asp-action="Index" class="btn btn-warning form-control" style="width:190px;">Back to Home</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}